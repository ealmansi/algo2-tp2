sistemaLaboral se representa con estrS

donde estrS es: conj(alianza),

	alianza es: conj(pgremio)


----

AgregarGremio:	in/out sl: sistemaLaboral, in gr: pgremio
iAgregarGremio:	in/out sl: estrS, in gr: pgremio
	
	alianza alianzaDelGremio <- Vacío()
	Agregar(alianzaDelGremio,gr)

	Agregar(sl, alianzaDelGremio)


----

AliarGremios: in/out sl: sistemaLaboral, in gr1: pgremio, in gr2: pgremio
iAliarGremios: in/out sl: estrS, in gr1: pgremio, in gr2: pgremio

	alianza aliadosG1 <- RemoverAlianza(sl,gr1)
	alianza aliadosG2 <- RemoverAlianza(sl,gr2)

	Agregar(sl, Union(aliadosG1,aliadosG2) )

----

RemoverAlianza: in sl: sistemaLaboral, in gr: pgremio -> res: alianza
iRemoverAlianza: in sl: estrS, in gr: pgremio -> res: alianza

	itConj(alianza) it <- CrearIt(sl)

	while ! Pertenece?(Siguiente(it),gr)
		Avanzar(it)

	res <- Copiar(Siguiente(it))

	EliminarSiguiente(it)

----

Dame#Alianzas: in sl: sistemaLaboral -> res: nat
iDame#Alianzas: in sl: estrS -> res: nat

---

DameGremios: in sl: sistemaLaboral -> res: conj(pgremio)
iDameGremios: in sl: estrS -> res: conj(pgremio)

	res <- Vacío()
	
	nat numeroAlianza <- 0

	itConj(alianza) itAlianzas <- CrearIt(sl)
	while HaySiguiente(itAlianzas)

		alianza al <- Siguiente(itAlianzas)
		GuardarNumeroAlianzaEnGremios(al, numeroAlianza)
		res <- Union(res, al)

		Avanzar(itAlianza)
		numeroAlianza <- numeroAlianza + 1
		
---

/* no se exporta */
iGuardarNumeroAlianzaEnGremios: in al: alianza, in numeroAlianza: nat

	itConj(pgremio) itGremios <- CrearIt(al)
	while HaySiguiente(itGremios)

		GuardarNumeroAlianza(*Siguiente(itGremios),numeroAlianza)
		Avanzar(itGremios)
